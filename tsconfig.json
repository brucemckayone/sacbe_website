{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/slider.js",
    "hooks/isOnScreen.js",
    "pages/api/stripe_handler.ts",
    "pages/api/auth/[...nextauth].js",
    "pages/api/auth/[...nextauth].js",
    "pages/api/auth/[...nextauth].js",
    "pages/inits/firebase_admin.js",
    "utils/email/emailBuilder.ts"
  ],
  "exclude": ["node_modules"]
}
